    }

    .card p {
      margin-bottom: 20px;
      color: #555;
      font-size: 1rem;
    }

    .card a {
      color: #007bff;
      text-decoration: none;
      font-weight: bold;
    }

    .footer {
      margin-top: 20px;
      font-size: 0.9rem;
      color: #888;
    }

    @media (max-width: 600px) {
      .card h1 {
        font-size: 1.5rem;
