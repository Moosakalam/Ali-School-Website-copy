<header class="header">
  <div class="container">
    <!-- Top Bar with School Info -->
    <div class="row py-2">
      <div class="col-md-6 header-left">
        <div class="school-info">
          <h1 class="school-name">School Name</h1>
          <p class="school-tagline">Empowering Minds, Building Futures</p>
          <p class="school-address">123 Education Street, City, State 12345</p>
        </div>
      </div>
      <div class="col-md-6 header-right text-end">
        <div class="contact-info">
          <p><i class="bi bi-telephone"></i> (123) 456-7890</p>
          <p><i class="bi bi-envelope"></i> info@schoolname.edu</p>
        </div>
      </div>
    </div>

    <!-- Navigation Bar -->
    <nav>
      <ul class="sidebar">
        <li onclick="hideSidebar()">
          <a href="#">
            <svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26">
              <path d="m249 849-42-42 231-231-231-231 42-42 231 231 231-231 42 42-231 231 231 231-42 42-231-231-231 231Z"/>
            </svg>
          </a>
        </li>
        <li><a href="/" class="<%= currentPage === '/' ? 'active' : '' %>">Home</a></li>
        <li><a href="/about" class="<%= currentPage === '/about' ? 'active' : '' %>">About Us</a></li>
        <li><a href="/gallery" class="<%= currentPage === '/gallery' ? 'active' : '' %>">Gallery</a></li>
        
        <li><a href="/enquire" class="<%= currentPage === '/enquire' ? 'active' : '' %>">Contact</a></li>
      </ul>
      <ul>
        <li><a href="/">School Name</a></li>
        <li class="hideOnMobile"><a href="/" class="<%= currentPage === '/' ? 'active' : '' %>">Home</a></li>
        <li class="hideOnMobile"><a href="/about" class="<%= currentPage === '/about' ? 'active' : '' %>">About Us</a></li>
        <li class="hideOnMobile"><a href="/gallery" class="<%= currentPage === '/gallery' ? 'active' : '' %>">Gallery</a></li>
       
        <li class="hideOnMobile"><a href="/enquire" class="<%= currentPage === '/enquire' ? 'active' : '' %>">Contact</a></li>
        <li class="menu-button" onclick="showSidebar()">
          <a href="#">
            <svg xmlns="http://www.w3.org/2000/svg" height="26" viewBox="0 96 960 960" width="26">
              <path d="M120 816v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z"/>
            </svg>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  function showSidebar() {
    const sidebar = document.querySelector('.sidebar');
    sidebar.style.display = 'flex';
  }
  function hideSidebar() {
    const sidebar = document.querySelector('.sidebar');
    sidebar.style.display = 'none';
  }
</script>
